<%- include("partials/header") -%>

<div class="container">
    
    <h2 style="text-align: center;">Create a New Campground</h2>

    <div style="margin: 25px auto; width: 30%;">
      <form action="/campgrounds" method="POST">
        <div class="form-group">
            <input class="form-control" type="text" name="camp_name" placeholder="Name">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="camp_image" placeholder="Image URL">
        </div>
        <div class="form-group">
            <button class="btn btn-md btn-primary btn-block">Submit!</button>
        </div>    
      </form>

      <a href="/campgrounds"> Go Back </a>
    </div>
    
</div>

<%- include("partials/footer") -%>