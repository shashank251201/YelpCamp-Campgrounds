<%- include("partials/header") -%>

<div class="container">
    <div class="jumbotron ">
        <div class="container">
            <h1>Welcome to YelpCamp!</h1>
            <p>View our hand-picked campgrounds from all over the world</p>
            <a class="btn btn-primary" role="button" href="/campgrounds/new"> Add New Campground </a>
        </div>
    </div>
    <div class="row text-center">
        <% campgrounds.forEach(function(camps){ %>
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div>
                    <img class="img-thumbnail img-fluid rounded" src="<%= camps.image %>" >
                    <div class="caption">
                        <p> <%= camps.name %> </p> 
                    </div> 
                </div>                                             
            </div>
        
        <% }) %>
    </div>


</div>

<%- include("partials/footer") -%>